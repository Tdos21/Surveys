@model Surveys.Models.UserSurveyPage

@{
    ViewBag.Title = "Create";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Take a Survey</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Fullname, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fullname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EditorFor(m => m.DateOfBirth, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.DateOfBirth)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Contact, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <br />
        <p>What is your favorite Food?</p>
        <div class="form-check form-check-inline">
            @Html.CheckBoxFor(model => model.Pizza, new { @class = "form-check-input", id = "chkPizza" })
            @Html.Label("chkPizza", "Pizza", new { @class = "form-check-label" })
        </div>
        <div class="form-check form-check-inline">
            @Html.CheckBoxFor(model => model.Pasta, new { @class = "form-check-input", id = "chkPasta" })
            @Html.Label("chkPasta", "Pasta", new { @class = "form-check-label" })
        </div>
        <div class="form-check form-check-inline">
            @Html.CheckBoxFor(model => model.PapAndWors, new { @class = "form-check-input", id = "chkPapAndWors" })
            @Html.Label("chkPapAndWors", "Pap and Wors", new { @class = "form-check-label" })
        </div>
        <div class="form-check form-check-inline">
            @Html.CheckBoxFor(model => model.Other, new { @class = "form-check-input", id = "chkOther" })
            @Html.Label("chkOther", "Other", new { @class = "form-check-label" })
        </div>
        <br />
        <br />
        <style>
            table {
                border-collapse: collapse;
                width: 100%;
            }

            th, td {
                border: 1px solid black;
                padding: 8px;
                text-align: left;
            }

            th {
                background-color: #f2f2f2;
            }
        </style>
        <p>Please rate your level of agreement</p>
        <br />
        <table>
            <tr>
                <th>&nbsp;</th>
                <th>Strongly Agree</th>
                <th>Agree</th>
                <th>Neutral</th>
                <th>Disagree</th>
                <th>Strongly Disagree</th>
            </tr>
            <tr>
                <td style="border-right: none;">Watch Movies</td>
                <td style="border-left: none;">@Html.RadioButtonFor(model => model.WatchMoviesRating, "Strongly Agree")</td>
                <td>@Html.RadioButtonFor(model => model.WatchMoviesRating, "Agree")</td>
                <td>@Html.RadioButtonFor(model => model.WatchMoviesRating, "Neutral")</td>
                <td>@Html.RadioButtonFor(model => model.WatchMoviesRating, "Disagree")</td>
                <td>@Html.RadioButtonFor(model => model.WatchMoviesRating, "Strongly Disagree")</td>
            </tr>
            <tr>
                <td style="border-right: none;">Listen to Radio</td>
                <td style="border-left: none;">@Html.RadioButtonFor(model => model.ListenToRadioRating, "Strongly Agree")</td>
                <td>@Html.RadioButtonFor(model => model.ListenToRadioRating, "Agree")</td>
                <td>@Html.RadioButtonFor(model => model.ListenToRadioRating, "Neutral")</td>
                <td>@Html.RadioButtonFor(model => model.ListenToRadioRating, "Disagree")</td>
                <td>@Html.RadioButtonFor(model => model.ListenToRadioRating, "Strongly Disagree")</td>
            </tr>
            <tr>
                <td style="border-right: none;">Eat Out</td>
                <td style="border-left: none;">@Html.RadioButtonFor(model => model.EatOutRating, "Strongly Agree")</td>
                <td>@Html.RadioButtonFor(model => model.EatOutRating, "Agree")</td>
                <td>@Html.RadioButtonFor(model => model.EatOutRating, "Neutral")</td>
                <td>@Html.RadioButtonFor(model => model.EatOutRating, "Disagree")</td>
                <td>@Html.RadioButtonFor(model => model.EatOutRating, "Strongly Disagree")</td>
            </tr>
            <tr>
                <td style="border-right: none;">Watch TV</td>
                <td style="border-left: none;">@Html.RadioButtonFor(model => model.WatchTVRating, "Strongly Agree")</td>
                <td>@Html.RadioButtonFor(model => model.WatchTVRating, "Agree")</td>
                <td>@Html.RadioButtonFor(model => model.WatchTVRating, "Neutral")</td>
                <td>@Html.RadioButtonFor(model => model.WatchTVRating, "Disagree")</td>
                <td>@Html.RadioButtonFor(model => model.WatchTVRating, "Strongly Disagree")</td>
            </tr>
        </table>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-dark" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        function confirmSubmit() {
            if (confirm("Are you sure you want to submit this survey?")) {
                document.getElementById("surveyForm").submit();
            }
        }
    </script>
    }